{% extends 'layout.twig' %}

{% block main_title %}Tableau de Bord - Administration{% endblock %}
	
{% block page_title %}Tableau de Bord{% endblock %}

{% block content %}

	<!-- Dashboard -->
	<section id="dashboard" class="container text-center">
		<div class="row justify-content-center">
			<div class="col-md-6 col-sm-12">
				<div class="jumbotron">
				  <h3 class="">Article</h3>
				  <hr>
				  <p>Ajouter, modifier, supprimer des articles du blog.</p>
				  <hr>
				  <p class="lead">
				    <a href="{{ base_url }}admin/article" class="btn btn-outline-primary btn-sm" role="button">Administrer</a>
				  </p>
				</div>
			</div>
			<div class="col-md-6 col-sm-12">
				<div class="jumbotron">
				  <h3 class="">Validation</h3>
				  <hr>
				  <p>Valider les nouveaux commentaires avant leurs publications.</p>
				  <hr>
				  <p class="lead">
				    <a href="{{ base_url }}admin/validation" class="btn btn-outline-primary btn-sm" role="button">Administrer</a>
				  </p>
				</div>
			</div>
		</div>		
	</section>

{% endblock %}

{% block add_js %}
    <script>
        $(document).ready(function(){
            var marginHeight = $(window).height() - $('footer').height()*2 - $('section').height() - $('header').height();
            if (marginHeight > 120) {
              $('section').css('margin-top', marginHeight/3);
              $('section').css('margin-bottom', marginHeight/3*2);
            }else {
                $('section').css('margin-top', '120px');
                $('section').css('margin-bottom', '120px');
            }
        });
    </script>
{% endblock %}