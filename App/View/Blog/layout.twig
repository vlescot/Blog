    <link href="http://localhost/P5/Blog/Public/css/front_style.css" rel="stylesheet">
  </head>

  <body id="front-app">

    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-light fixed-top" id="mainNav">
      <div class="container">
        <a class="navbar-brand js-scroll-trigger" href="http://localhost/P5/Blog/accueil">Vincent Lescot</a>
        <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarResponsive">
          <ul class="navbar-nav ml-auto">
            <li class="nav-item">
              <a class="nav-link js-scroll-trigger" href="http://localhost/P5/Blog/accueil">Accueil</a>
            </li>
            <li class="nav-item">
              <a class="nav-link js-scroll-trigger" href="http://localhost/P5/Blog/blog/">Blog</a>
            </li>
            <li class="nav-item">
              <a class="nav-link js-scroll-trigger" href="http://localhost/P5/Blog/accueil#contact-form">Contact</a>
            </li>
            <li class="nav-item">
              <a class="nav-link js-scroll-trigger" href="http://localhost/P5/Blog/authentification">ADMIN</a>
            </li>
          </ul>
        </div>
      </div>
    </nav>

{% block header %}{% endblock %}

    <div id="alert-container"></div>

{% block content %}{% endblock %}

    <footer>
        <div class="row" id="my-links">
            <a class="offset-4 col-1" href="https://github.com/vlescot" target="_blank"><i class="fab fa-github fa-lg"></i></a>
            <a class="col-1" href="https://www.linkedin.com/in/vincent-lescot-70916959/" target="_blank"><i class="fab fa-linkedin-in fa-lg"></i></a>
            <a class="col-1" href="https://twitter.com/VinceLesc" target="_blank"><i class="fab fa-twitter fa-lg"></i></a>
            <a class="col-1" href="mailto:vincent.lescot@gmail.com" target="_blank"><i class="far fa-envelope fa-lg"></i></a>
        </div>
        <div id="copyright" class='text-center'>© 2018 - Réalisé par Vincent Lescot</div>
    </footer>


    <!-- Bootstrap core JavaScript -->
    <script src="http://localhost/P5/Blog/Public/vendor/jquery/jquery.min.js"></script>
    <script src="http://localhost/P5/Blog/Public/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- Notification function -->
    <script src="http://localhost/P5/Blog/Public/js/notification.js"></script>
    <!-- Font Awesome -->
    <script defer src="https://use.fontawesome.com/releases/v5.0.8/js/all.js"></script>
    <!-- Plugin JavaScript -->
    <script src="http://localhost/P5/Blog/Public/vendor/jquery-easing/jquery.easing.min.js"></script>
    <script src="http://localhost/P5/Blog/Public/vendor/scrollreveal/scrollreveal.min.js"></script>
    <script src="http://localhost/P5/Blog/Public/vendor/magnific-popup/jquery.magnific-popup.min.js"></script>
    <!-- Custom scripts for this template -->
    <script src="http://localhost/P5/Blog/Public/js/creative.js"></script>
    <script>
        $(document).ready(function(){
            if ($("title").html() === '404 - Page non trouvé') {
                $('nav').addClass('navbar-shrink');
                $('section').css('height', $(window).height() - $('footer').height());
            }
        });
    </script>
  </body>
</html>
