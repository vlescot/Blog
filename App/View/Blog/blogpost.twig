{% extends 'layout.twig' %}

{% block main_title %}{{post.title}} - Blog{% endblock %}

{% block header %}

  {% if post.img %}
    <header class="masthead masthead-post text-center text-white d-flex" style="background-image: url(http://localhost/P5/Blog/Public/img/Fullsize/{{post.img}});">
  {% else %}
  <header class="masthead masthead-post text-center text-white d-flex">
  {% endif %}
  
    <div class="cover">
        <div class="container my-auto">
          <div class="row">
            <div class="col-lg-10 mx-auto">
              <h1 class="text-uppercase">
                <strong>{{ post.title }}</strong>
              </h1>
              <hr>
            </div>
            <div class="col-lg-8 mx-auto">
              <p><strong>{{ post.lede }}</strong></p>
            </div>
          </div>
        </div>
    </div>
    </header>
{% endblock %}

{% block content %}
    <section id="post">
      <div class="container">
        <div class="row">
          <div class="col-md-10 col-md-offset-1 col-lg-8 col-lg-offset-2 mx-auto">
            <a href="http://localhost/P5/Blog/blog/" class="btn btn-back"><i class="fas fa-undo"></i> Retour</a>
            <p class="post-text"> {{ post.content|raw }} </p>
            <p class="text-right infos"><strong>Par {{ post.login }}, le {{post.date_create|localizeddate('none', 'none', 'fr', null, 'EEEE d MMMM Y')}}</strong></p>
          </div>
        </div>
      </div>
    </section>
    
    <hr class="break-post">

    <section id="comments">
      <div class="container">
        <div class="row">
          <div class="col-md-8 offset-md-4 col-lg-6 offset-lg-6 mx-auto">
            <p class="h5">Commentaires pour cet article :</p>
              {% for comment in comments %}
                {% if comment.validated == 1 %}
                  <div class="comment-content">
                    <p class="comment">{{ comment.content }}</p>
                    <p class="text-right infos"><strong>Par <span class="text-white">{{ comment.author }}</span>,  le <span class="text-white">{{ comment.date_create|localizeddate('none', 'none', 'fr', null, 'd MMMM Y à H:mm') }}</span></strong></p>
                  </div>
                {% endif %}
              {% endfor %}
            <form action="" method="post" class="form-inline">
                <div class="form-group">
                  <input type="text" name="author" class="form-control col-3" placeholder="Votre nom" required>
                  <textarea name="content" class="form-control col-7" placeholder="Écrire un commentaire..." rows="1" required></textarea>
                  <button type="submit" class="btn btn-primary col-2">Poster</button>
                </div>
            </form>
          </div>
        </div>
      </div>
    </section>
{% endblock %}